@model ProfileVM;

<div class="detayContainer">

    <!-- textDetails -->
    <div class="textDetails">
        <ul class="articles">

            @if (Model.Details != null)
            {
                @foreach (var item in Model.Details)
                {
                    <li class="articleItem">
                        <a class="articleItem" href="/user/textdetail?textId=@item.Id">
                            <span class="date">@item.Title</span>
                        </a>
                    </li>
                }
            }
        </ul>
    </div>

    <div class="charts">
        <div id="chart_div" style="width: 100%; height: 400px;"></div>
    </div>

    <div class="successGrade">

        <form asp-action="addmessage" asp-controller="user" method="post">
            <textarea name="message" placeholder="Başarı Notu"></textarea>
            <button type="submit" class="btn">Kaydet</button>
        </form>

        @* <form asp-action="deletemessage" asp-controller="user" method="post">
        <button type="submit" class="btn btn-delete">Sil</button>
        </form>*@

    </div>


</div>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
